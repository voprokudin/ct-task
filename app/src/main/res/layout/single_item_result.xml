<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/bottom_stroke"
    android:orientation="horizontal"
    android:padding="@dimen/single_item_padding_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_xlarge"
            android:background="@drawable/avatar"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/single_item_padding_small"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/colorBlack"
            android:paddingTop="@dimen/single_item_padding_small"
            android:paddingLeft="@dimen/single_item_padding_medium"
            android:paddingRight="@dimen/single_item_padding_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/colorBlack"
            android:paddingTop="@dimen/single_item_padding_small"
            android:paddingLeft="@dimen/single_item_padding_medium"
            android:paddingRight="@dimen/single_item_padding_medium"/>

        <TextView
            android:id="@+id/tv_created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/colorBlack"
            android:paddingTop="@dimen/single_item_padding_small"
            android:paddingBottom="@dimen/single_item_padding_small"
            android:paddingLeft="@dimen/single_item_padding_medium"
            android:paddingRight="@dimen/single_item_padding_medium"/>

    </LinearLayout>

</LinearLayout>